\mode<presentation>

% Requirement
\RequirePackage{xcolor}

% Colors definitions
\definecolor{utbm1}{RGB}{136,112,170}
\definecolor{utbm2}{RGB}{144,209,225}
\definecolor{utbm3}{RGB}{177,179,181}
\definecolor{utbm4}{RGB}{234,109,123}
\definecolor{utbmbg}{RGB}{0,0,0}
\definecolor{utbmfg}{RGB}{255,255,255}

% Beamer colors configuration
\setbeamercolor*{normal text}{fg=black,bg=white}
\setbeamercolor*{alerted text}{fg=utbm4}
\setbeamercolor*{example text}{fg=black}

\setbeamercolor*{structure}{fg=utbm2}

\setbeamercolor*{palette primary}{bg=utbm1,fg=utbmfg}
\setbeamercolor*{palette secondary}{bg=utbm2,fg=utbmfg}
\setbeamercolor*{palette tertiary}{bg=utbm3,fg=utbmfg}
\setbeamercolor*{palette quaternary}{fg=black}

\setbeamercolor*{local structure}{parent=structure}

\setbeamercolor*{titlelike}{parent=palette primary}
\setbeamercolor*{title}{parent=titlelike}
\setbeamercolor*{title in head/foot}{parent=palette tertiary}

\setbeamercolor*{subtitle}{parent=title}

\setbeamercolor*{author}{parent=palette tertiary}
\setbeamercolor*{author in head/foot}{parent=author}

\setbeamercolor*{institute}{parent=palette tertiary}
\setbeamercolor*{institute in head/foot}{parent=institute}

\setbeamercolor*{date}{parent=palette tertiary}
\setbeamercolor*{date in head/foot}{parent=date}

\setbeamercolor*{headline}{bg=utbmbg,fg=utbmfg}
\setbeamercolor*{footline}{parent=palette tertiary}

\setbeamercolor*{frametitle}{parent=titlelike}
\setbeamercolor*{framesubtitle}{parent=frametitle}

\setbeamercolor*{block title}{parent=palette secondary}
\setbeamercolor*{block title alerted}{parent=block title,bg=utbm4}
\setbeamercolor*{block title example}{parent=block title}

\setbeamercolor*{block body}{fg=black,bg=black!10}
\setbeamercolor*{block body alerted}{parent=block body,bg=utbm4!30}
\setbeamercolor*{block body example}{parent=block body}

\setbeamercolor*{magic}{fg=black}
\setbeamercolor*{magic2}{parent=magic}

\setbeamercolor*{item}{parent=local structure}
\setbeamercolor*{subitem}{parent=item}
\setbeamercolor*{subsubitem}{parent=subitem}

\setbeamercolor*{enumerate item}{parent=item}
\setbeamercolor*{enumerate subitem}{parent=subitem}
\setbeamercolor*{enumerate subsubitem}{parent=subsubitem}

\setbeamercolor*{itemize item}{parent=item}
\setbeamercolor*{itemize subitem}{parent=subitem}
\setbeamercolor*{itemize subsubitem}{parent=subsubitem}

\setbeamercolor*{itemize/enumerate body}{}
\setbeamercolor*{itemize/enumerate subbody}{}
\setbeamercolor*{itemize/enumerate subsubbody}{}

\setbeamercolor*{description item}{parent=item}

\setbeamercolor*{page number in head/foot}{parent=palette tertiary}

\mode<all>
